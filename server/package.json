{
  "name": "napalmsky-server",
  "version": "1.0.0",
  "description": "Napalm Sky server - Express + Socket.io",
  "main": "src/index.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node --max-old-space-size=920 --max-semi-space-size=32 --optimize-for-size --expose-gc dist/index.js",
    "start:512mb": "node --max-old-space-size=460 --max-semi-space-size=16 --optimize-for-size --expose-gc dist/index.js",
    "start:1gb": "node --max-old-space-size=920 --max-semi-space-size=32 --optimize-for-size --expose-gc dist/index.js",
    "start:2gb": "node --max-old-space-size=1840 --max-semi-space-size=64 --optimize-for-size --expose-gc dist/index.js"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.621.0",
    "@aws-sdk/s3-request-presigner": "^3.621.0",
    "@socket.io/redis-adapter": "^8.3.0",
    "@types/qrcode": "^1.5.5",
    "bcrypt": "^5.1.1",
    "cloudinary": "^2.7.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.12.0",
    "qrcode": "^1.5.4",
    "redis": "^4.7.0",
    "sharp": "^0.33.5",
    "socket.io": "^4.7.2",
    "stripe": "^19.1.0",
    "twilio": "^5.10.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.8.6",
    "@types/pg": "^8.15.5",
    "@types/uuid": "^9.0.8",
    "tsx": "^4.7.0",
    "typescript": "^5.6.3"
  }
}
